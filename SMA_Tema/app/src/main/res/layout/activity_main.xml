        />

    <Button
        android:id="@+id/start"
        android:layout_width="181dp"
        android:layout_height="53dp"
        android:layout_margin="10dp"
        android:text="Go to Activity 2"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="349dp" />

</LinearLayout>