<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Firebase.FirebaseLab"
    android:padding="10dp"
    android:orientation="vertical"
   android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/loginside"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:id="@+id/firebase_emaillog"
            android:layout_margin="5dp"></EditText>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:id="@+id/firebase_passlog"
            android:layout_margin="5dp"></EditText>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:id="@+id/firebase_log_btn"
            android:layout_margin="5dp"
            android:layout_gravity="right"
            ></Button>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/registerside"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:id="@+id/firebase_userreg"
            android:layout_margin="5dp"></EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:id="@+id/firebase_emailreg"
            android:layout_margin="5dp"></EditText>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:id="@+id/firebase_passreg"
            android:layout_margin="5dp"></EditText>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:id="@+id/firebase_reg_btn"
            android:layout_margin="5dp"
            android:layout_gravity="right"
            ></Button>

    </LinearLayout>


</LinearLayout>